@page "/professors-overview"

<h3>ProfessorsOverview</h3>

@if (Professors == null)
{
    <p><em>Loading...</em></p>
}
else
{

    <tabel class="table table-light">
        <thead class="table-primary">
        <th>Professor Id</th>
        <th>Name</th>
        <th>Surname</th>

        </thead>
        <tbody>
            @foreach (var professor in Professors)
            {
                <tr>
                    <td>@professor.Id</td>
                    <td>@professor.Name</td>
                    <td>@professor.Surname</td>

                </tr>
            }
        </tbody>
    </tabel>
}
<section id="create-professor" class="mt-5">
    <h3>Add new Professor</h3>
    @if (NewProfessor == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <EditForm Model="@NewProfessor" OnValidSubmit="@CreateProfessor">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <label>
                Name <br />
                <InputText id="name" @bind-Value=NewProfessor.Name DisplayName="Name" />
                <br />
            </label>
            <label>
                Surname <br />
                <InputText id="surname" @bind-Value=NewProfessor.Surname DisplayName="Surname" />
                <br />
            </label>
            <label>
                Phone Number <br />
                <InputText id="surname" @bind-Value=NewProfessor.PhoneNumber DisplayName="PhoneNumber" />
                <br />
            </label>
            <button type="submit">Add</button>
        </EditForm>
    }
</section>
@if (Professors == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <section id="delete-professors" class="mt-5">
        <h3>Delete Professor by Id</h3>
        <div class="col-sm-10">
            <InputSelect id="delete-professor" @bind-Value="GuidForDelete" class="form-control">
                @foreach (var prof in Professors)
                {
                    <option value="@prof.Id" class="text-black">@prof.Id</option>
                }
            </InputSelect>
        </div>
        <button type="submit" onclick="@DeleteProfessor">Delete</button>
    </section>
}
<section id="update-professors" class="mt-5">
    <h3>Update Professor Phone Number</h3>
    <div class="col-sm-10">
        Select Professor Id
        @if (Professors == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <InputSelect id="update-professor" @bind-Value="GuidProfessorForUpdate" class="form-control">
                @foreach (var prof in Professors)
                {
                    <option value="@prof.Id" class="text-black">@prof.Id</option>
                }
            </InputSelect>
            <p>Select Contact Id</p>
            <InputSelect id="update-professor-contact" @bind-Value="GuidConatctForUpdate" class="form-control">
                @foreach (var contact in Contacts)
                {
                    <option value="@contact.Id" class="text-black-50">@contact.Id</option>
                }
            </InputSelect>
        }
        <label>
            Phone Number <br />
            <InputText id="surname" @bind-Value=PhoneNumber DisplayName="PhoneNumber" />
            <br />
        </label>
    </div>
    <button type="submit" onclick="@UpdateProfessor">Update</button>
</section>
